<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".detailsClient">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewDetailsClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/detalhe_cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleClient"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageViewDetailsClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@id/imageViewDetailsClient"
        app:layout_constraintTop_toTopOf="@id/imageViewDetailsClient" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewLinkedin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/linkedin"
        app:layout_constraintBottom_toTopOf="@+id/imageViewGoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetailsClient" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewGoogle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/google"
        app:layout_constraintBottom_toTopOf="@+id/imageViewNetflix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLinkedin" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewNetflix"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/netflix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGoogle" />

</androidx.constraintlayout.widget.ConstraintLayout>