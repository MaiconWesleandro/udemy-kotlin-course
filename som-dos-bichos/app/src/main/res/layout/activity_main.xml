<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewDog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cao"
        app:layout_constraintBottom_toTopOf="@+id/imageViewLion"
        app:layout_constraintStart_toStartOf="@id/imageViewLogo"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewCat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/gato"
        app:layout_constraintBottom_toTopOf="@+id/imageViewMonkey"
        app:layout_constraintEnd_toEndOf="@id/imageViewLogo"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewLion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSheep"
        app:layout_constraintStart_toStartOf="@id/imageViewDog"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDog" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewMonkey"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/macaco"
        app:layout_constraintBottom_toTopOf="@+id/imageViewCow"
        app:layout_constraintEnd_toEndOf="@id/imageViewCat"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCat" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewSheep"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDireitos"
        app:layout_constraintStart_toStartOf="@id/imageViewLion"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLion" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewCow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDireitos"
        app:layout_constraintEnd_toEndOf="@id/imageViewMonkey"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMonkey" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewDireitos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/direitos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1" />


</androidx.constraintlayout.widget.ConstraintLayout>